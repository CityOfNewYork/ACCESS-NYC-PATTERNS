/ Layout
= extend('/layouts/default');

/ Component
- title = 'Share Form';

/ Partials
= partial('partials/styles.slm');
= partial('partials/links.slm');
= partial('partials/head.mixin.slm');
= partial('partials/content-header.mixin.slm');
= partial('section/section.mixin.slm');
= partial('section/section-text.mixin.slm');

/ Content blocks
= content('head');
  = mixin('head', title);

= content('header');
  = mixin('header', title);

= content('content');
  = mixin('content-header', title);
  = mixin('section', 'Email Share Form', 'components/share-form/share-form-email');
  = mixin('section', 'Text Share Form', 'components/share-form/share-form-text');
  = mixin('section-text', 'Share Form Usage', 'components/share-form/share-form.readme');
