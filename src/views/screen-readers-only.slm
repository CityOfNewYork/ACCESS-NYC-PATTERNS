/ Layout
= extend('/slm/layouts/default');

/ Component
- title = 'Screen Readers Only';

/ Partials
= partial('/slm/partials/styles.slm');
= partial('/slm/partials/links.slm');
= partial('/slm/partials/head.mixin.slm');
= partial('/slm/partials/content-header.mixin.slm');
= partial('/slm/section/section.mixin.slm');
= partial('/slm/section/section-text.mixin.slm');

/ Content blocks
= content('head');
  = mixin('head', title);

= content('header');
  = mixin('header', title);

= content('content');
  = mixin('content-header', title);
  = mixin('section', false, 'utilities/screen-readers-only/screen-readers-only');
  = mixin('section', 'Focusable', 'utilities/screen-readers-only/screen-readers-only-focusable');
