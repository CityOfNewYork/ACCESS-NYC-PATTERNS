

= mixin('alert-box', 'code = false', 'text = ""')
  - if this.code
    div class='${class_demo_class_containers}'
      div class='code-block mb-1'
        pre
          div = '<div class="c-alert-box bg-status-success">'
          div = '  <div class="c-alert-box__icon">'
          div = '    <div class="c-alert-box__svg bg-icon-success"></div>'
          div = '  </div>'
          div = '  <div class="c-alert-box__body">'
          div = '    Success'
          div = '  </div>'
          div = '</div>'

  // Demonstration
  div class='c-alert-box bg-status-success'
    div class='c-alert-box__icon'
      div class='c-alert-box__svg bg-icon-success'
    div class='c-alert-box__body' Success

  - if this.code
    div class='${class_demo_class_containers}'
