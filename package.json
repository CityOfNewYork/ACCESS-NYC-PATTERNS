{
  "name": "ACCESS-NYC-PATTERNS",
  "version": "0.0.1",
  "description": "",
  "author": "Mayor's Office for Economic Opportunity",
  "license": "GPL-3.0+",
  "homepage": "https://cityofnewyork.github.io/ACCESS-NYC-PATTERNS/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfNewYork/ACCESS-NYC-PATTERNS.git"
  },
  "bugs": {
    "url": "https://github.com/CityOfNewYork/ACCESS-NYC-PATTERNS/issues"
  },
  "main": "npm run start",
  "config": {
    "port": "8080",
    "postcss": "./config/",
    "rollup": "./config/rollup.js",
    "style_src": "src/scss/site-default.scss",
    "style_bundle": "bundle/styles/site.concat.css",
    "style_dist": "dist/styles/site.min.css"
  },
  "scripts": {
    "test": "",
    "start": "PORT=$npm_package_config_port concurrently 'npm run styles:watch' 'npm run scripts:watch' 'npm run build:watch' 'npm run serve' 'npm run sync'",
    "serve": "PORT=$npm_package_config_port node .app/serve.js --ext slm --watch src",
    "build": "VARS=$npm_package_config_vars node .app/build.js",
    "build:watch": "nodemon --ext slm --watch src/views -x 'npm run build'",
    "publish": "node .app/publish.js",
    "scripts": "rollup -c $npm_package_config_rollup",
    "scripts:watch": "rollup -c $npm_package_config_rollup -w",
    "sync": "browser-sync start --files 'src' --no-open --no-ui --reload-delay 2000 --proxy \"http://localhost:$npm_package_config_port\"",
    "styles": "npm run styles:variables && npm run styles:sass && npm run styles:postcss",
    "styles:variables": "node .app/variables.js",
    "styles:sass": "node .app/sass.js",
    "styles:postcss": "postcss $npm_package_config_style_bundle --config $npm_package_config_postcss -o $npm_package_config_style_dist",
    "styles:watch": "nodemon --ext scss --watch src --ignore _variables.scss -x 'npm run styles'"
  },
  "devDependencies": {
    "ajv": "^5.5.1",
    "autoprefixer": "^7.2.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.25.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "concurrently": "^3.5.1",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^3.10.0",
    "cssnano-cli": "^1.0.5",
    "eslint": "^4.12.1",
    "eslint-config-google": "^0.5.0",
    "express": "^4.16.2",
    "gh-pages": "^1.1.0",
    "json-sass": "^1.3.5",
    "lodash-es": "^4.17.4",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^4.1.1",
    "postcss-sass": "^0.2.0",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.0.0",
    "slm": "^1.0.0",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^9.0.0",
    "uglify-js": "^3.0.15"
  },
  "dependencies": {
    "animate.scss": "0.0.6",
    "bourbon": "^4.3.4",
    "bourbon-neat": "^1.9.0",
    "lodash": "^4.17.4",
    "tailwindcss": "^0.3.0",
    "uswds": "^0.13.3"
  },
  "babel": {
    "plugins": [
      "external-helpers",
      "lodash"
    ],
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "google",
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "FB": false
    },
    "rules": {
      "one-var": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "comment-whitespace-inside": null,
      "no-missing-eof-newline": null,
      "at-rule-empty-line-before": null,
      "number-leading-zero": "never",
      "selector-pseudo-element-colon-notation": null
    }
  }
}
